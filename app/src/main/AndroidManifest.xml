<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coolingyenews">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoolingYeNews.White"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentTheme" />
        <activity
            android:name=".news.activity.NewsActivity"
            android:theme="@style/Theme.CoolingYeNews.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/NoTitle" />
        <activity
            android:name=".collect.CollectActivity"
            android:label="@string/title_activity_collect"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".message.MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".activity.UserActivity"
            android:label="@string/title_activity_settings_users"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".activity.UserSafetyActivity"
            android:label="@string/title_activity_user_safety"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".history.HistoryActivity"
            android:label="@string/title_activity_history"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".activity.WeatherActivity"
            android:label="@string/title_activity_weather"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity
            android:name=".video.VideoActivity"
            android:theme="@style/AppThemeLightNoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity android:name=".activity.BaseViewActivity"
        android:theme="@style/Theme.colorPrimary.White"/>
        <activity android:name=".activity.SpeechActivity"
            android:label="评论详细"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity android:name=".activity.LikeActivity"
            android:label="收到的赞"
            android:theme="@style/Theme.colorPrimary.White"/>
        <activity android:name=".activity.ReplyActivity"
            android:label="回复我的"
            android:theme="@style/Theme.colorPrimary.White"/>
    </application>

</manifest>