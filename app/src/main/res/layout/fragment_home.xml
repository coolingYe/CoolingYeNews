<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.coolingyenews.bean.User"/>
        <variable
            name="icon"
            type="String"/>
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--新闻界面-->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/llt_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipChildren="false">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp">

                    <LinearLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.1"
                        app:layout_scrollFlags="scroll|enterAlways"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/user_icon"
                            android:layout_marginLeft="15dp"
                            tools:src="@drawable/ic_me"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <TextView
                            android:id="@+id/tv_seacher"
                            android:text="搜索新闻"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_find"
                            android:layout_marginRight="15dp"
                            android:textColor="#c6c6c6"
                            android:textSize="14sp"
                            android:drawablePadding="6dp"
                            android:background="@drawable/shape_seacher_bg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/iv_msg"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_message"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="44dp">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="44dp">

                            <!--                    <com.example.coolingyenews_mvc.widget.magicindicator.MagicIndicator-->
                            <!--                        android:id="@+id/magic_indicator"-->
                            <!--                        android:layout_marginLeft="5dp"-->
                            <!--                        android:layout_width="match_parent"-->
                            <!--                        android:layout_height="44dp" />-->

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tab_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tabGravity="center"
                                app:tabIndicatorColor="@color/theme_color_green"
                                app:tabIndicatorHeight="3dp"
                                app:tabMode="scrollable"
                                app:tabIndicatorFullWidth="false"
                                app:tabSelectedTextColor="@color/theme_color_green"
                                app:tabTextColor="@android:color/darker_gray" />

                            <!--                    <View-->
                            <!--                        android:layout_width="15dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:background="@drawable/shape_channel_shade_left"/>-->

                            <!--                    <View-->
                            <!--                        android:layout_alignParentRight="true"-->
                            <!--                        android:layout_width="15dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:background="@drawable/shape_channel_shade_right"/>-->

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/iv_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_add"
                            android:layout_marginRight="15dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e8e8e8" />

                </com.google.android.material.appbar.AppBarLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:overScrollMode="never"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <com.scwang.smart.refresh.footer.BallPulseFooter
                android:id="@+id/ref_classics_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp"/>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
        <!--搜索界面-->
        <LinearLayout
            android:id="@+id/llt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_search_search"
                    android:text="搜索"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.example.coolingyenews.widget.view.XEditText
                    android:id="@+id/et_search"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:hint="请输入搜索内容"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_oval_grey"
                    app:x_clearDrawable="@drawable/icon_clear_text"
                    android:drawableLeft="@drawable/ic_find"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>


                <TextView
                    android:id="@+id/tv_close_search"
                    android:text="取消"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.example.coolingyenews.widget.view.SearchRecyclerView
                android:overScrollMode="never"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="LinearLayoutManager"/>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>