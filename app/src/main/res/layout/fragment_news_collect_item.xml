<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ViewModel"
            type="com.example.coolingyenews.bean.News" />
    </data>

    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@{ViewModel.getTitle}"
            tools:text="一个有希望的民族不能没有英雄"
            android:textSize="17sp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black_text"
            android:layout_toRightOf="@id/iv_simple"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="top"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:id="@+id/llt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/iv_simple"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@{ViewModel.getAuthor}"
                android:maxLength="6"
                android:textColor="@color/news_resource"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="13小时前"
                android:text="@{ViewModel.getTime}"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_read"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="200评"
                android:text="@{ViewModel.getReview_count}"
                android:textColor="@color/text_grey" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/icon_more" />
<!--            <TextView-->
<!--                android:id="@+id/tv_news_id"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:text="@{ViewModel.getNewsNId}" />-->

<!--            <TextView-->
<!--                android:id="@+id/tv_news_context"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:text="@{ViewModel.getNewsContent}" />-->

<!--            <TextView-->
<!--                android:id="@+id/tv_img_url"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:text="@{ViewModel.getNewsSrc}" />-->
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_simple"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            tools:src="@drawable/ic_me"
            imageUrl="@{ViewModel.getImg}"
            android:scaleType="centerCrop"
            android:layout_width="115dp"
            android:layout_height="78dp" />

        <View
            android:id="@+id/view"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/llt_info"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_bg" />

    </RelativeLayout>
</layout>