<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.example.coolingyenews.bean.User" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#FAFAFA"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="15sp"
                android:layout_marginLeft="46dp"
                android:layout_centerVertical="true"
                android:textColor="#515151"/>
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/ic_me"
                android:layout_alignRight="@id/iv_end1"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>
            <ImageView
                android:id="@+id/iv_end1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_enter"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/iv_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="昵称"
            tools:right_text="CoolingYe"
            app:show_left_icon="false" />

        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/iv_sex"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="性别"
            tools:right_text="男"
            app:show_left_icon="false" />

        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/iv_birthday"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="出生年月"
            tools:right_text="1997-XX-XX"
            app:show_left_icon="false" />

        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/iv_Signature"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="个性签名"
            tools:right_text="冷却液"
            app:show_left_icon="false" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#FAFAFA"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/iv_uid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="UID"
            tools:right_text="XXXXXX"
            app:show_left_icon="false"
            app:show_right_arrow="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:visibility="gone">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名片"
                android:textSize="15sp"
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:textColor="#515151"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/icon_qr_code"
                android:layout_alignRight="@id/iv_end"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>
            <ImageView
                android:id="@+id/iv_end"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_chat_blue"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
