<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <com.example.coolingyenews.widget.view.ImageTextView
                android:id="@+id/tv_speech"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:Top_icon="@drawable/icon_chat_blue"
                app:Bottom_text="回复我的" />

            <com.example.coolingyenews.widget.view.ImageTextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:Top_icon="@drawable/icon_like_blue"
                app:Bottom_text="收到的赞" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FAFAFA" />
        </LinearLayout>

    </LinearLayout>
</layout>