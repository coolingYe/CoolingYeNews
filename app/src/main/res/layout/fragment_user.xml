<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.UserFragment">
        <ImageView
            android:id="@+id/iv_avatar_big"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_me"
            android:layout_marginLeft="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="username" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_name"
            tools:text="UID: yeyeyewenkuan" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_enter"
            android:padding="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_id"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_id"
            app:layout_constraintTop_toTopOf="@+id/tv_user_id"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录即可评论及发布内容"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />


        <View
            android:id="@+id/user_view"
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#656565"
            app:layout_constraintBottom_toBottomOf="@+id/tv_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_like" />
        <View
            android:id="@+id/user_view1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_like" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/icon_save"
            android:gravity="center"
            android:text="我的收藏"
            android:textSize="13sp"
            android:textColor="#9d9f9f"
            app:layout_constraintEnd_toStartOf="@+id/user_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_history_record"
            android:gravity="center"
            android:text="历史记录"
            android:textSize="13sp"
            android:textColor="#9d9f9f"
            app:layout_constraintBottom_toBottomOf="@+id/tv_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_view"
            app:layout_constraintTop_toTopOf="@+id/tv_like" />

        <View
            android:id="@+id/user_view2"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#656565"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_like" />
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/IV_weather"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="天气"
            app:show_left_icon="true"
            app:left_icon="@drawable/icon_weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_view2"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/IV_my_history"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="历史记录"
            app:show_left_icon="true"
            app:left_icon="@drawable/icon_history_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IV_weather"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/IV_my_collect"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="我的收藏"
            app:show_left_icon="true"
            app:left_icon="@drawable/icon_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IV_my_history"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/IV_tools"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="设置"
            app:show_left_icon="true"
            app:left_icon="@drawable/icon_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IV_my_collect"/>
        <com.example.coolingyenews.widget.view.ItemView
            android:id="@+id/IV_about_author"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:left_text="关于作者"
            app:show_left_icon="true"
            app:left_icon="@drawable/icon_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IV_tools"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>