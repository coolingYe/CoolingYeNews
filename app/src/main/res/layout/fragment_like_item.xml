<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Review"
            type="com.example.coolingyenews.bean.Review" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            tools:src="@drawable/ic_me"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="@{Review.getUserName+`等总计`+Review.getLikes_count+`人赞了我的评论`}"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="username" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_content"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:text="@{Review.getReviewContent}"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_review_user_name"
            app:layout_constraintTop_toTopOf="@+id/tv_review_user_name"
            tools:text="username" />
<!--        <com.google.android.material.textview.MaterialTextView-->
<!--            android:id="@+id/tv_user_review"-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="12sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="@{SReview.getContent}"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/tv_review_user_name"-->
<!--            app:layout_constraintLeft_toLeftOf="@+id/tv_review_user_name"-->
<!--            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />-->

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="35dp"
            android:text="@{Review.getReviewTime}"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_user_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_review_user_name"
            tools:text="18分钟前" />
        <View
            android:id="@+id/user_view2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#FAFAFA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>