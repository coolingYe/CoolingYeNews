    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--新闻界面-->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/llt_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipChildren="false">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp">

                    <LinearLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.1"
                        app:layout_scrollFlags="scroll|enterAlways"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_seacher"
                            android:text="搜索视频"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_find"
                            android:layout_marginRight="15dp"
                            android:textColor="#c6c6c6"
                            android:textSize="14sp"
                            android:drawablePadding="6dp"
                            android:background="@drawable/shape_seacher_bg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e8e8e8" />

                </com.google.android.material.appbar.AppBarLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_nominate_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layoutManager="LinearLayoutManager"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
        <!--搜索界面-->
        <LinearLayout
            android:id="@+id/llt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:layout_marginRight="-65dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_search_search"
                    android:text="搜索"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.example.coolingyenews.widget.view.XEditText
                    android:id="@+id/et_search"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:hint="请输入搜索内容"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_oval_grey"
                    app:x_clearDrawable="@drawable/icon_clear_text"
                    android:drawableLeft="@drawable/ic_find"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>


                <TextView
                    android:id="@+id/tv_close_search"
                    android:text="取消"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.example.coolingyenews.widget.view.SearchRecyclerView
                android:overScrollMode="never"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="LinearLayoutManager"/>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>