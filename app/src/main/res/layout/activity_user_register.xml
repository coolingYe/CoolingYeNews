<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="用户名称"
            android:gravity="center"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="输入用户名"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
            app:layout_constraintTop_toTopOf="@+id/tv_user_name"  />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="手机号码"
            android:gravity="center"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_name"/>
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="手机号/邮箱"
            android:inputType="textPersonName"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_phone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_phone"
            app:layout_constraintTop_toTopOf="@+id/tv_user_phone"  />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="密         码"
            android:gravity="center"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_phone"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_phone"/>
        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_pwd"
            app:layout_constraintTop_toTopOf="@+id/tv_user_pwd"  />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_pwd_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="确认密码"
            android:gravity="center"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_pwd"
            app:layout_constraintLeft_toLeftOf="@+id/tv_user_pwd"/>
        <EditText
            android:id="@+id/edit_pwd_again"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_pwd_again"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_pwd_again"
            app:layout_constraintTop_toTopOf="@+id/tv_user_pwd_again"  />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="注册"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:typeface="normal"
            android:layout_marginTop="50dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_pwd_again" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
