<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/llt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <com.example.coolingyenews.widget.view.ImageTextView
                    android:id="@+id/tv_speech"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:Top_icon="@drawable/icon_chat_blue"
                    app:Bottom_text="回复我的" />

                <com.example.coolingyenews.widget.view.ImageTextView
                    android:id="@+id/tv_like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:Top_icon="@drawable/icon_like_blue"
                    app:Bottom_text="收到的赞" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#FAFAFA" />
            </LinearLayout>
        </LinearLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/speech_item_list"-->
<!--        android:name="com.example.coolingyenews_mvc.ui.home.news.NewsFragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layoutManager="LinearLayoutManager"-->
<!--        tools:context=".news.NewsItemListFragment"-->
<!--        tools:listitem="@layout/fragment_speech_item"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/llt_info"/>-->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/llt_info">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabfornewsspeech_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable"
                app:tabIndicatorColor="@color/purple_500"
                app:tabSelectedTextColor="@color/purple_500"

                app:tabIndicatorFullWidth="false"/>
            <!--    <include layout="@layout/content_scrolling" />-->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pagerfornewsspeech_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>