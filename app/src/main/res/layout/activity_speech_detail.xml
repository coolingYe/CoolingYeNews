    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            imageUrl="@{Review.getUserIconSrc}"
            tools:src="@drawable/ic_me"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="@{Review.getUserName}"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="username" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_review_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:text="@{Review.getReviewTime}"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_user_name"
            app:layout_constraintLeft_toLeftOf="@+id/tv_review_user_name"
            tools:text="18分钟前" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_user_review"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="@{Review.getReviewContent}"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_time"
            app:layout_constraintLeft_toLeftOf="@+id/tv_review_time"
            tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="查看原稿件"
            android:visibility="gone"
            android:textColor="@color/purple_500"
            app:layout_constraintLeft_toRightOf="@+id/iv_chat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_chat"
            app:layout_constraintTop_toTopOf="@+id/iv_chat" />
